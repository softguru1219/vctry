    </div>
  </div>
  
  <div class="footer-group">
    <div><%= I18n.t('mail.titles.sent_email') %> <span class="yellow"><%= @email %></span> <%= I18n.t('homepage.titles.by')%></div>
    <div class="mt-1">
      <div><%= I18n.t('mail.titles.vctry_esports') %> (haftungsbeschr√§nkt)</div>
      <div><%= I18n.t('mail.titles.street') %></div>
      <div><%= I18n.t('mail.titles.street_number') %></div>
      <div><%= I18n.t('homepage.titles.germany').capitalize %></div>
    </div>
  </div>
</div>
