<div class="form">
  <%= image_tag(attachments['logo.png'].url) %>
  <div class="form-group mb-1">
    <h2 class='h3 strong'><%= I18n.t('homepage.titles.hi').capitalize %> <%= I18n.t('homepage.titles.there') %>,</h2>
    <h2 class="strong"><%= I18n.t('mail.titles.thank_join_vctry') %>!</h2>
    <h3><%= I18n.t('mail.titles.confirm_email') %></h3>
    <div class="mt-1">
      <a href="<%= confirmation_url(@resource, confirmation_token: @token) %>">
        <button type="button" class="btn btn-primary transition-3d-hover confirm-btn"><%= I18n.t('mail.titles.confirm_email_address') %></button>
      </a>
    </div>
    <div class="mt-1">
      <div class="strong"><%= I18n.t('mail.titles.button_not_working')%>?</div>
      <div><%= I18n.t('mail.titles.past_browser')%>:</div>
