<% if ContentCreator.all.present? %>
  <div id="carouselExampleIndicators-desktop" class="carousel slide full-width" data-ride="carousel" data-interval="500000">
    <div class="carousel-inner">
      <% ContentCreator.all.sample(5).each_with_index do |creator, index| %>
        <% if index == 0 %>
          <div class="carousel-item active">
        <% else %>
          <div class="carousel-item">
        <% end %>
          <div class="row mt-5">
            <div class="col-md-12 col-sm-12">
              <div class="row">
                <div class="col-md-2 col-sm-2">
                  <%= image_tag("home/quotation@2x.png", :alt => "premium_btn", :class=>"full-width") %>
                </div>
                <div class="col-md-2 col-sm-2 flex-center quotation-user-background">
                  <div class="quotation-user-white"></div>
                  <div class="quotaion-user-img">
                    <% if creator.logo.present? %>
                      <img src="<%= creator.logo %>" alt="premium_btn", width="70%">
                    <% else %>
                      <%= image_tag("home/testimonial.png", :alt => "premium_btn", :width=>"70%") %>
                    <% end %>
                  </div>
                </div>
                <div class="col-md-1 col-sm-1 mt-4">
                  <%= image_tag("home/quote@2x.png", :alt => "premium_btn", :width=>"70%") %>
                </div>
                <div class="col-md-7 col-sm-7 mt-4">
                  <div class="quote-comments">
                    <span>
                      <% if session[:locale] == 'de' %>
                        <%= creator.german_description %>
                      <% else %>
                        <%= creator.description %>
                      <% end %>
                    </span>
                  </div>
                  <div class="author-name mt-3">
                    <b><%= creator.name %></b> <span class="author-carrer">
                      <% if session[:locale] == 'de' %>
                        <%= creator.german_subtitle %>
                      <% else %>
                        <%= creator.subtitle %>
                      <% end %></span>
                  </div>
                  <div class="mt-2">
                    <span class="author-carrer text-uppercase"><%= I18n.t('homepage.titles.content_creator_code') %></span>: <span class="author-code"><b><%= creator.code %></b></span>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center my-3">
      
      <ol class="carousel-indicators">
        <% ContentCreator.all.sample(5).each_with_index do |creator, index| %>
          <% if index == 0 %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="active author-bar"></li>
          <% else %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="author-bar"></li>
          <% end %>
        <% end %>
      </ol>
    </div>
  </div>
<% end %>

<script>
  $(".desktop-resolution .carousel-indicators li").click(function() {
    indicators = $(this).data("slide-to");
    $(".desktop-resolution .carousel").carousel(indicators)
  })
</script>