<div class="event-lists">
  <% if current_user %>
    <div class="home-event-lists py-3">
  <% else %>
    <div class="home-event-lists py-5">
  <% end %>
    <div class="px-8">
      <div class="row flex-align-center">
        <div class="col-md-4">
          <a href="<%= race_events_path %>">
            <div class="position-relative flex-center">
              <%= image_tag("pack_event/pack_logo.png", class: "full-width", srcset: { "pack_event/pack_logo@2x.png": "2x" }) %>
              <!-- <div class="pack_event-logo">
                <#%= image_tag("pack_event/pack_event_logo.png", class: "full-width", srcset: { "pack_event/pack_event_logo@2x.png": "2x" }) %>
              </div> -->
            </div>
          </a>
        </div>
        <div class="col-md-8 event-title">
          <div class="row">
            <div class="col-md-8">
              <div class="font-30"><b>3.000.000 FIFA Points Pack Opening</b></div>
              <div class="font-24 mt-1">20.000 Packs - 10 Streamer - 3 Tage</div>
              <div class="mt-1 font-16">
                <span class="plus-btn">+</span>
                <span class="pl-2">Unschlagbares <b><span class="yellow">P</span>remium-Angebot!</b></span>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row flex-align-center">
                <div class="first-soccer col-md-5">
                  <%= image_tag("pack_event/zidane-fut.png", class: 'z-index-high full-width', srcset: { "pack_event/zidane-fut@2x.png": "2x" }) %>
                  <!-- <div class="second-soccer">
                    <#%= image_tag("pack_event/ronald-fut.png", srcset: { "pack_event/ronald-fut@2x.png": "2x" }) %>
                  </div> -->
                </div>
                <div class="col-md-7">
                  <a href="<%= race_events_path %>" class="round-border text-uppercase float-right">Zum Event gehen</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
