    <div class="col-md-6 col-sm-6">
      <div class="mt-4 flex-center">
        <%= image_tag("home/Illustration.png", :alt => "premium_btn", :class=>"full-width", srcset: { "home/Illustration@2x.png": "1x" }) %>
      </div>
    </div>
    <div class="col-md-6 col-sm-6">
      <div class="mt-4 text-center content-creator__mb-5 px-4">
