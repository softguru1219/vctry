<footer id="footer">
  <div class="footer-mobile-resolution"">
    <div class="start-footer footer-background">
      <div class="container contain-padding">
        <div class="row footer__first-section flex-center pt-4">
          <div class="col-6">
            <a href="<%= root_path %>">
              <%= image_tag("home/logo.png", :alt => "logo", srcset: { "home/logo@2x.png": "2x" }) %>
            </a>
          </div>
          <div class="col-6">
            <select class="selectpicker language" onchange="javascript:languageSelect(this)">
              <option value="en">English</option>
              <!-- <option value="fr">Fran√ßais</option> -->
              <option value="de">Deutsch</option>
            </select>
          </div>
        </div>
        <div class="row footer__second-section mt-3">
          <div class="col-6 about-section">
            <div class="section-titles">
              <span><%= I18n.t('homepage.footer.titles.about_name') %></span>
            </div>
            <div class="section-progress">
              <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
            <div class="mt-3">
              <a href="<%= about_path %>" class="section__details__titles"><%= I18n.t('homepage.footer.titles.about') %></a>
              <a href="<%= jobs_path %>" class="section__details__titles"><%= I18n.t('homepage.footer.titles.jobs') %></a>
              <a href="<%= terms_path %>" class="section__details__titles" target="_blank"><%= I18n.t('homepage.footer.titles.terms_condition') %></a>
              <a href="<%= privacy_path %>" class="section__details__titles" target="_blank"><%= I18n.t('user.titles.privacy') %></a>
            </div>
          </div>
          <div class="col-6 contact-section">
            <div class="section-titles">
              <span><%= I18n.t('homepage.footer.titles.contact') %></span>
            </div>
            <div class="section-progress">
              <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
            <div class="section__details mt-3">
              <a href="<%= faq_path %>" class="section__details__titles" target="_blank"><%= I18n.t('homepage.footer.titles.faq') %></a>
              <a href="https://discord.gg/VCTRY" class="section__details__titles" target="_blank"><%= I18n.t('homepage.footer.titles.help') %></a>
              <a href="<%= content_creator_path %>" class="section__details__titles" target="_blank"><%= I18n.t('homepage.footer.titles.content_creator.mobile') %></a>
            </div>
          </div>
          <div class="col-12 mt-3 mb-4">
            <a href="https://www.facebook.com/VCTRYGG/">
            <div class="social-round mr-3 flex-center">
                <i class="fa fa-facebook"></i>
            </div>
            </a>
            <div class="social-round mr-3 flex-center">
              <i class="fa fa-twitter"></i>
            </div>
            <a href="https://www.instagram.com/vctrygg/">
            <div class="social-round mr-3 flex-center">
              <i class="fa fa-instagram"></i>
            </div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="end-footer footer-background">
      <div class="container contain-padding py-3">
        <div class="row flex-center">
          <div class="col-6 end-footer__font">
            <span><i class="fa fa-copyright"></i> <%= Time.now.year %> <b><%= I18n.t('homepage.footer.copyright.site') %></b></span>
          </div>
          <div class="col-6 end-footer__font text-right">
            <span><%= I18n.t('homepage.footer.copyright.website') %> <b><a style="color: inherit;" href="https://www.nekson.co" target="_blank"><%= I18n.t('homepage.footer.copyright.website_name') %></a></b></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>