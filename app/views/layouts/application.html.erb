  <body>
    <% if request.fullpath != '/users/sign_in' && request.fullpath != '/users/sign_up'%>
        <%= render partial: 'header' %>
    <% end %>
    <main id="main" role="main"><%= yield %></main>
    <% if controller.controller_name != 'calendars' && request.fullpath != '/users/sign_in' && request.fullpath != '/users/sign_up'%>
        <%= render partial: 'footer' %>
        <%= render partial: 'desktop_footer' %>
    <% end %>

    <% if current_user %>
        <input type="hidden" id="current_user_id" value="<%= current_user.id %>" />
    <% end %>
