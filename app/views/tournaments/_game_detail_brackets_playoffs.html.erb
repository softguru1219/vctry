<div class="brackets-playoffs mt-4">
  <% if Tournament.normal_stage(@touranment) == true %>
    <strong><%= stage.name %></strong>
    <div class="mt-3">
      <iframe width="100%" height="360" id="brackets_iframe" src="https://widget.toornament.com/tournaments/<%= @tournament.toornament_id %>/stages/<%= stage.toornament_stage_id %>/?_locale=en_US" frameborder="0"></iframe>
    </div>
  <% elsif @tournament.matches.present? %>
    <div class="mt-3">
      <% @tournament.matches.each do |m| %>
        <iframe width="100%" height="360" id="brackets_iframe" src="https://widget.toornament.com/tournaments/<%= @tournament.toornament_id %>/matches/<%= m.toornament_match_id %>/?_locale=en_US" frameborder="0"></iframe>
      <% end %>
    </div>
  <% end %>
</div>